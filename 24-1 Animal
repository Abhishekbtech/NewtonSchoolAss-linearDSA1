// implement classes here

class Animal {
    protected int legs;
    protected double brainSize;

    public Animal(int legs, double brainSize) {
        this.legs = legs;
        this.brainSize = brainSize;
    }

    public void sound() {
        System.out.println("which animal sound do you want?");
    }
}

class Lion extends Animal {

    public Lion(int legs, double brainSize) {
        super(legs, brainSize);
    }

    @Override
    public void sound() {
        System.out.println("Lion roar!! roar! roar!!");
    }
}


class Elephant extends Animal {
    public Elephant(int legs, double brainSize) {
        super(legs, brainSize);
    }

    
    @Override
    public void sound() {
        System.out.println("Elephant Pawoo! Pawoo!");
    }
}

class Cow extends Animal {

    public Cow(int legs, double brainSize) {
        super(legs, brainSize);
    }

    @Override
    public void sound() {
        System.out.println("Cow moo moo");
    }
}


class Goat extends Animal {
    public Goat(int legs, double brainSize) {
        super(legs, brainSize);
    }

    @Override
    public void sound() {
        System.out.println("Goat baa! baa! baa!");
    }
}
